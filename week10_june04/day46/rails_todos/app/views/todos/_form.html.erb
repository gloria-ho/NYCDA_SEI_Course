<%= form_for @todo do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div>
    <%= f.label :priority %>
    <%= f.select :priority, options_for_select([['High Priority', 'H'], ['Medium Priority', 'M'], ['Low Priority', 'L']]) %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>